
<% include ../partials/header %>
<div class="container favourites-container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Your Favourites:</h1>
    </div>
  </div>
  <div class="row favourites-row">
    <div class="col-sm-12">
      <% favourites.favourite.forEach(function(obj) { %>
      <div class="item">
        <div class="dlt-overlay">
          <a href="/favourites/<%=obj.id%>">
            <div class="form-group">
              <a href="/favourites/<%=obj.id%>" class="dlt-btn btn"><i class="glyphicon glyphicon-remove"></i></a>
            </div>
          </a>
        </div>
        <div class="comment-overlay">
          <form class="form comments-form" action="/favourites/<%=obj.id%>/comments">
            <span class="glyphicon glyphicon-edit"></span>
          </form>
        </div>
        <a class="poster" href="/favourites/<%=obj.id%>">
          <img class="posters" src="<%=obj.poster%>">
          <div class="overlay">
            <h2><%=obj.title%></h2>
            <p><%=obj.year%></p>
          </div>
        </a>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<% include ../partials/footer %>

